
<div class="main-panel">
  <div class="content-wrapper">
    <div class="page-header">
      <h3 class="page-title">
        <span class="page-title-icon bg-gradient-primary text-white mr-2">
          <i class="mdi mdi-bell"></i>
        </span> Notifications </h3>
        <%# <h1>Home</h1> %>
          <%# <%= link_to "users list", users_path %>
         
      <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
          <li class="breadcrumb-item active" aria-current="page">
            <%# <span></span>Overview <i class="mdi mdi-alert-circle-outline icon-sm text-primary align-middle"></i> %>
          </li>
        </ul>
      </nav>
    </div>

    <div class="row">
      <div class="col-lg-12 stretch-card">
       <%  @notifications.each do |notification|%>
         <div class="card">
           <div class="card-body">
             <%# <h4 class="card-title">Table with contextual classes</h4> %>
             <%# <p class="card-description"> Add class <code>.table-{color}</code> %>
             </p>
             <table class="table table-bordered">
               <thead>
                 <tr>
              
                   
                
                 </tr>
               </thead>
               <tbody>
                 <tr class="table-info">
                   <td>
                      <h3> <%=link_to  notification.actor.name.capitalize, notification.actor %>
                      Posted an event 
                      <%= link_to notification.notifiable.name.capitalize, notification.notifiable%>
                      </h3>
                    </td>
                   <td>
                      <h3><%= notification.created_at.strftime("%d-%m-%y")%></h3> 
                   </td>
                     <% end %>  
                 </tr>
                
               </tbody>
             </table>
         
           </div>
         </div>
       </div>
     </div>
   </div>
