
    <%= form_with(model: event, local: true) do |form| %>
      <% if event.errors.any? %>
       <div id="error_explanation">
          <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
             <% event.errors.full_messages.each do |message| %>
              <li><%= message %></li>
             <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>

      <div class="field">
        <%= form.label :body %>
        <%= form.text_area :body %>
       </div>

       <div class="field">
         <%= form.label :date %>
         <%= form.datetime_select :date %>
       </div>
       
       <div class="field">
         <%= form.label :street %>
         <%= form.text_field :location, multiple: true %>
       </div>

       <div class="field">
         <%= form.label :city %>
         <%= form.text_field :location, multiple: true %>
       </div>

       <div class="field">
         <%= form.label :state %>
         <%= form.text_field :location, multiple: true %>
       </div>
         <div class="field">
         <%= form.label :country %>
         <%= form.text_field :location , multiple: true%>
       </div>
